<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    
    <!-- Product id (pid) - will be HIDDEN - used to pass to other activity -->
    <TextView
        android:id="@+id/pid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />
 
    <!-- Property Image Label -->
    
    <ImageView
        android:id="@+id/pImage"
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/propertyImage"
        android:src="@drawable/image_not_found" />
    
    <!-- Property addr 1 -->
    <TextView
        android:id="@+id/pProperty"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dip"
	    android:paddingBottom="25dp"
	    android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="@string/propertyAddr1"
        android:background="#000000"  />
    
    <!-- Cost label -->
    <TextView
        android:id="@+id/pLabel"
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="180dp"
        android:paddingTop="5dip"
	    android:paddingBottom="25dp"
	    android:textColor="#fd971f"
        android:textSize="12sp"
        android:text="@string/cost_label" />
    
    <!-- AvgCost for the month -->
    <TextView
        android:id="@+id/pAvgCost"
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="180dp"
        android:paddingTop="5dip"
	    android:textColor="#fd971f"
        android:textSize="12sp"/>
    
</FrameLayout>
